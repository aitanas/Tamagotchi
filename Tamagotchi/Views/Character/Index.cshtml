@{
  Layout = "_Layout";
}
<body class="container text-center p-4">
  @using Tamagotchi.Models;
  
  <h1>Your Tamagotchis:</h1>

  @if (Model.Count == 0)
  {
    <p>You haven't created any characters yet.</p>
  }
  <ul>
    @* @foreach (ToDoList.Models.Item item in Model) if we don't declare @using *@
    @foreach (Character character in Model)
    {
      <li><a href='character/@character.Id'>@character.Name</a></li>
    }
  </ul>

  <a href="/character/new">Hatch a new Tamagotchi</a>
  <form action="/character/delete" method="post">
    <button type="submit" name="button">Restart all Tamagotchis</button>
  </form>
</body>